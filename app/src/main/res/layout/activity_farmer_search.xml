<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:1"
                android:visibility="invisible"/>

            <androidx.appcompat.widget.AppCompatButton             style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/register"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/register_fingerprint"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton             style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/validate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/validate_fingerprint"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:N"
                android:visibility="invisible"/>

            <androidx.appcompat.widget.AppCompatButton             style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/register2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/register_fingerprint"
                android:textSize="20sp"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatButton             style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/validate2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/validate_fingerprint"
                android:textSize="20sp"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatButton             style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/clear_flash"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/clear_flash"
                android:textSize="20sp"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatButton             style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/calibration"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/calibration"
                android:textSize="20sp"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatButton
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/backRegister"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textSize="20sp"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/upfail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/fingerprintImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/ivInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/nfc"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search or Hold NFC card to the back of phone"
            android:textSize="20dp"
            android:visibility="gone"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    </LinearLayout>